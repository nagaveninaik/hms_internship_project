    <h1>Add  WARD</h1>
    <div class="container">
        <table border="2">
            <tr>
                <th>ward_id</th>
                <th>ward_name</th>
                <th>ward_location</th>
                <th>ward_status</th>
                <th>ward_type</th>
                
            </tr>
            <% result.forEach((data=>{ %>
                <tr>
                  <td><%= data._id %></td>
                  <td><%= data.ward_name %></td>
                  <td><%= data.ward_location %></td>
                  <td><%= data.ward_status %></td>
                  <td><%= data.ward_type %></td>
                  
                
                </tr>    
            <% })) %> 
            
         
           </table>
        <form action="/updateward" method="POST">
            <table class="table">
                <tr>
                    <th><label for="ward_id">ward_id</label></th>
