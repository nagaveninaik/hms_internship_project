                        <option value="w3">w3</option>
                        <option value="w4">w4</option>
                        <option value="w5">w5</option>
                        <option value="w6">w6</option>
                        <option value="w7">w7</option>
                        <option value="w8">w8</option>
                        <option value="w9">w9</option>
                        <option value="w10">w10</option>
                        
                     </select>
                        
                     </td>
                </tr>
                <tr></tr>
                <tr>
                    <th><label for='ward_location'>ward_location</label></th>
                    <td><select name='ward_location' id='ward_location'>
                        <option value="GF">GF</option>
                        <option value="1F">1F</option>
                        <option value="2F">2F</option>
                        <option value="3F">3F</option>
                        <option value="4F">4F</option>
                        <option value="5F">5F</option>
                        <option value="6F">6F</option>
                        <option value="7F">7F</option>
                        <option value="8F">8F</option>
                    </select></td>              
                  </tr>
                  <tr></tr>
                  <tr>
                    <th><label for="ward_type">ward_type</label></th>
                    <td><select name="ward_type" id="ward_type">
                        <option value="General">General</option>
                        <option value="Luxury">Luxury</option>
                        <option value="Semi_luxury">Semi_luxury</option>
                        <option value="Emergency">emergency</option>
                    </td>
                </tr>
                <tr></tr>
                  <tr>
                      <th><label for="ward_status">ward_status</label></th>
                      <td><select name='ward_status' id='ward_status'>
                          <option value="Full">Full</option>
                          <option value="Empty">Empty</option>
                      </select></td>
                  </tr>
                  <tr></tr>
                  <tr>
                      <th><label for="ward_capacity">ward_capacity</label></th>
                      <td><select name='ward_capacity' id='ward_capacity'>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="5">5</option>
                    </select></td>
                  </tr>
                  <tr></tr>
                  <tr>
                    <th><label for="ward_filled">ward_filled</label></th>
